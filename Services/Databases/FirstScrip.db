DROP TABLE IF EXISTS Personas; 
DROP TABLE IF EXISTS Departamentos; 
DROP TABLE IF EXISTS Menu;

CREATE TABLE Menu (
    id_menu INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    nombre_menu VARCHAR(25) NOT NULL,
    url_direcction VARCHAR(45) NOT NULL,
    parent_id INT,
    orden_menu INT NOT NULL,
    estado_menu TINYINT(1) NOT NULL DEFAULT 1 
);

CREATE Table Departamentos( q
    id_depa INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    nombre_departamento VARCHAR(40) UNIQUE NOT NULL
);


CREATE TABLE Personas(
    id_user INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
     nombre_user VARCHAR(25) NOT NULL,
     apellido_user VARCHAR(25) NOT NULL,
     user_email VARCHAR(40) UNIQUE NOT NULL,
    user_password VARCHAR(30) NOT NULL,
    telefono VARCHAR(10) UNIQUE NOT NULL,
    id_departamento INT NOT NULL
); 

